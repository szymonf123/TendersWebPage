extends layout

block content
    html(lang="pl")
        head
            meta(charset="UTF-8")
        body
            header
                h1 Przetargi.pl
            nav
                ul(id="navi")
                    a(href="/")
                        li Strona główna
                    a(href="/actual-tenders")
                        li Lista aktualnych przetargów
                    a(href="/cancelled-tenders")
                        li Lista zakończonych przetargów
                    a(href="/add-tender")
                        li Dodaj przetarg
            article
                h2 Dodaj przetarg
                form(method="POST", class="insert", action="/add-tender/execute")
                    div(class="category")
                        div(class="description") Nazwa przedmiotu przetargu:
                        div(class="field")
                            input(type="text", name="name")
                    div(class="category")
                        div(class="description") Instytucja zamawiająca:
                        div(class="field")
                            input(type="text", name="institution")
                    div(class="category")
                        div(class="description") Opis przedmiotu przetargu:
                        div(class="field")
                            textarea(name="descr")
                    div(class="category")
                        div(class="description") Data rozpoczęcia przyjmowania ofert:
                        div(class="field")
                            input(type="date", name="startDate")
                    div(class="category")
                        div(class="description") Godzina rozpoczęcia przyjmowania ofert:
                        div(class="field")
                            input(type="time", name="startTime")
                    div(class="category")
                        div(class="description") Data zakończenia przyjmowania ofert:
                        div(class="field")
                            input(type="date", name="endDate")
                    div(class="category")
                        div(class="description") Godzina zakończenia przyjmowania ofert:
                        div(class="field")
                            input(type="time", name="endTime")
                    div(class="category")
                        div(class="description") Maksymalny koszt realizacji zamówienia (zł):
                        div(class="field")
                            input(type="number", step="0.01", name="price")
                    input(type="submit")
            footer Przetargi.pl 2025